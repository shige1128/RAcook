<% content_for :css do %>
  <%= stylesheet_link_tag 'user/registration' %>
<% end %>


<%= render "shared/header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class="main">
  <main class="form-content">
    <form class="sign-up-form">
      <h2 class="heading-name">
        新規ユーザー登録
      </h2>
        <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">ユーザーネーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :user_name, class:"input-default", id:"user_name", placeholder:"例)おいしいRecipe太郎", maxlength:"40", autofocus: true %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"例)racook@xxx.co.jp" %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字記号" %>
        <p class="info-text">※英字と数字は必ず1文字ずつ含めてください</p>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">パスワード(確認用)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"確認のため再入力して下さい" %>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">生年月日</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birthday,
                        class:'select-birth',
                        id:"birth-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p>年</p>", "<p>月</p>") + "<p>日</p>" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-text-wrap">
          <label class="form-text">お住まいの都道府県</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
      </div>
      <%= f.submit "登録", class:"send"%>
    </form>
  </main>
<%= render "shared/footer" %>
<% end %>